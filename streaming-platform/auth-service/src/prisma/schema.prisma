datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  username      String
  passwordHash  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // refresh token (hashed) para seguridad
  hashedRt      String? 

  // relación 1:N con videos, comentarios, etc (si querés luego)
}
